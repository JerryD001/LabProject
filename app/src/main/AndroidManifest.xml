<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jerry.lab">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 活动 -->
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.OtherAppActivity">
            <intent-filter>
                <action android:name="com.intent.action.activity4" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 广播接收者 -->
        <receiver
            android:name=".broadcast.ToastMsgReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.jerry.lab.TOAST_MSG_BROADCAST" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcast.ForceOfflineReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".activity.FileStorageActivity"></activity>
    </application>

</manifest>